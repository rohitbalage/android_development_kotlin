<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AndroidAnimations.NativeBasicAnimations.NativeAndroidAnimationsActivity">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/appicon" />

    <ScrollView
        android:layout_below="@id/imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--Blink animation of the image-->
                <Button
                    android:id="@+id/blink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="BLINK"
                    android:textColor="#FFFFFF"
                    android:background="#311b92"/>

                <!--Slide Up animation of the image-->
                <Button
                    android:id="@+id/slide_up"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="SLIDE UP"
                    android:textColor="#FFFFFF"
                    android:background="#311b92" />

                <!--Slide Down animation of the image-->
                <Button
                    android:id="@+id/slide_down"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="SLIDE DOWN"
                    android:textColor="#FFFFFF"
                    android:background="#311b92" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear1"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--Rotate animation of the image-->
                <Button
                    android:id="@+id/rotate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="ROTATE"
                    android:textColor="#FFFFFF"
                    android:background="#311b92" />

                <!--Zoom In animation of the image-->
                <Button
                    android:id="@+id/zoom_in"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="ZOOM IN"
                    android:textColor="#FFFFFF"
                    android:background="#311b92" />

                <!--Zoom Out animation of the image-->
                <Button
                    android:id="@+id/zoom_out"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="ZOOM OUT"
                    android:textColor="#FFFFFF"
                    android:background="#311b92" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear2"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--Cross Fade animation of the image-->
                <Button
                    android:id="@+id/cross_fade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="CROSS FADE"
                    android:textColor="#FFFFFF"
                    android:background="#311b92" />

                <!--Fade In animation of the image-->
                <Button
                    android:id="@+id/fade_in"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="FADE IN"
                    android:textColor="#FFFFFF"
                    android:background="#311b92" />

                <!--Fade out animation of the image-->
                <Button
                    android:id="@+id/fade_out"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="FADE OUT"
                    android:textColor="#FFFFFF"
                    android:background="#311b92" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear3"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--Move animation of the image-->
                <Button
                    android:id="@+id/move"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="MOVE"
                    android:textColor="#FFFFFF"
                    android:background="#311b92" />

                <!--Bounce animation of the image-->
                <Button
                    android:id="@+id/bounce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="BOUNCE"
                    android:textColor="#FFFFFF"
                    android:background="#311b92" />

                <!--Sequential animation of the image-->
                <Button
                    android:id="@+id/sequential"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="SEQUENTIAL"
                    android:textColor="#FFFFFF"
                    android:background="#311b92" />
            </LinearLayout>

            <!--To stop the animation of the image-->
            <Button
                android:id="@+id/stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear4"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="70dp"
                android:text="Stop"
                android:textColor="#FFFFFF"
                android:background="#E65100"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>