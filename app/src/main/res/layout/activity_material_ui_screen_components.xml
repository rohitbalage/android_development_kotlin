<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:contentDescription="@string/viewgroupimage"
                    android:background="@drawable/imageview" />

                <Button
                    android:id="@+id/androidUIWidgets"
                    style="?attr/buttonStyle"
                    android:text="@string/android_ui_widgets"
                    android:onClick="goToAndroidUIWidgets"
                  />

                <EditText
                    android:id="@+id/implicitIntentText"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Implicit intent"
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:background="#C0A4F3"
                    android:inputType="text" />

                <Button
                    android:id="@+id/implicitBtn"
                    style="?attr/buttonStyle"
                    android:fontFamily="@font/amaranth"
                    android:text="@string/intents" />


                <Button
                    android:id="@+id/explicitBtn"
                    style="?attr/buttonStyle"
                    android:text="@string/explicit_intent" />

                <Button
                    android:id="@+id/googleImplicit"
                    style="?attr/buttonStyle"
                    android:text="@string/google_implicit_intent" />

                <TextView
                    android:id="@+id/randomNumber"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/amaranth"
                    android:text="I will be random no" />

                <Button
                    android:id="@+id/randomNumberBtn"
                    style="?attr/buttonStyle"
                    android:text="Generate Random No" />

                <Button
                    android:id="@+id/shareBtn"
                    style="?attr/buttonStyle"
                    android:text="Share button" />

                <Button
                    android:id="@+id/expandableListViewBtn"
                    style="?attr/buttonStyle"
                    android:text="@string/expandable_list_view" />


                <Button
                    android:id="@+id/TabLayoutViewBtn"
                    style="?attr/buttonStyle"
                    android:text="@string/tab_layouts" />

                <Button
                    android:id="@+id/BottomTabLayoutViewBtn"
                    style="?attr/buttonStyle"
                    android:text="@string/bottom_nav_bar_tabs" />


                <Button
                    android:id="@+id/GridLayoutViewBtn"
                    style="?attr/buttonStyle"
                    android:text="Grid Layout with RecycleView" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
