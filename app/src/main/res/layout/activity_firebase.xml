<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Firebase.Firebase">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/firebasehedaliine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/firebase_app"
            android:textSize="30sp"
        />



    <Button
        android:id="@+id/goToFirebaseAuth"
        app:cornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goToFirebaseAuth"
        android:layout_marginTop="20dp"
       />


    <Button
        android:id="@+id/buttonFirebaseAnalytics"
        android:layout_height="wrap_content"
        android:text="@string/firebase_analytics"
        app:cornerRadius="10dp"
        android:layout_width="match_parent"
        />

    <Button
        android:id="@+id/buttonFirebaseCloudMessaging"
        android:layout_height="wrap_content"
        android:text="@string/firebase_in_app_messaging"
        app:cornerRadius="10dp"
        android:layout_width="match_parent"
        />


        <Button
            android:id="@+id/buttonCrashanalytics"
            android:layout_height="wrap_content"
            android:text="@string/firebase_crash_analytics"
            app:cornerRadius="10dp"
            android:layout_width="match_parent"
            />

        <Button
            android:id="@+id/buttonInappMessaging"
            android:layout_height="wrap_content"
            android:text="@string/firebase_cloud_messaging"
            app:cornerRadius="10dp"
            android:layout_width="match_parent"
            />

        <TextView
            android:id="@+id/fireTextView"
           android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
           />

        <TextView
            android:id="@+id/firestoretext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            />


    </LinearLayout>
</ScrollView>