<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/HeadlineTextViewStyle"
                android:text="Firebase User Data"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                />

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profilepic"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                />

            <Button
                android:id="@+id/buttonUpdateProfilePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Profile Picture"
                style="?attr/buttonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/textViewSkills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skills"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                />

            <EditText
                android:id="@+id/editTextSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your skills..."
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:textColor="@color/violetlight"
                android:layout_marginEnd="32dp"
                />

            <TextView
                android:id="@+id/textViewEducation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                />

            <EditText
                android:id="@+id/editTextEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your education..."
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:textColor="@color/violetlight"
                android:layout_marginEnd="32dp"
                />

            <Button
                android:id="@+id/buttonUpdateUserData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update User Data"
                style="?attr/buttonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                />

            <Button
                android:id="@+id/buttonSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                style="?attr/buttonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                />

            <EditText
                android:id="@+id/buttonUpdateuserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your new email..."
                android:layout_marginTop="32dp"
                android:textColor="@color/violetlight"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                />

            <Button
                android:id="@+id/buttonUpdateEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Email"
                style="?attr/buttonStyle"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
