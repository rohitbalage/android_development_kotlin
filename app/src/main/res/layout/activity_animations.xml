<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AndroidAnimations.Animations">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp"
        android:gravity="center">

        <!-- Title Text -->
        <TextView
            style="@style/HeadlineTextViewStyle"
            android:layout_marginTop="20dp"
            android:text="@string/animatios_in_android" />


        <Button
            style="?attr/buttonStyle"
            android:text="@string/native_animation"
            android:onClick="gotoNativeAnimation"
            />

        <!-- Image for Animations -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/appicon"
            android:contentDescription="Image for animations"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />



        <!-- Lottie Animation Views -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/donelottie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/done_lottie"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/timewatchlottie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/timewatch_lottie"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/robofightlotttie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/olympic_fight"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/dogwalkinglottie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/dog_walkiing_lottie"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/graphslottie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/graph_lottie"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/pinlottie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/pin_lottie"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sunlottie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/sun_lottie"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/trophielottie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/trophie_lottie"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />



    </LinearLayout>
</ScrollView>
