<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:layout_height="wrap_content"
    tools:context=".apis">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollview"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/APIDesignHeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/api_designs"
                android:textSize="20sp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.059" />

            <Button
                android:id="@+id/retrofitBtn"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/retrofit"
                android:onClick="goTORetrofitAPI"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.05" />

            <Button
                android:id="@+id/VolleyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/volley"
                android:onClick="goToVolley"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button"
                app:layout_constraintVertical_bias="0.078" />

            <Button
                android:id="@+id/MySQLBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mysql"
                android:onClick="MYSQL"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button"
                app:layout_constraintVertical_bias="0.078" />

            <Button
                android:id="@+id/ktorBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ktor" />

            <Button
                android:id="@+id/JsonParsingBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/json_parsing" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>