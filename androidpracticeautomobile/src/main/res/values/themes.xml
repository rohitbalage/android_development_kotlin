<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidUiPracticeKotlin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="buttonStyle">@style/CustomButtonStyle.Day</item>
        <!-- Other theme customizations -->
    </style>

    <style name="Theme.AndroidUiPracticeKotlin" parent="Base.Theme.AndroidUiPracticeKotlin" />

    <!-- Default custom button style for day theme -->
    <style name="CustomButtonStyle.Day" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/amaranth</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/violetlight</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Other theme customizations -->
    <!-- Custom button style for night theme -->
    <style name="CustomButtonStyle.Night" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/amaranth</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Headline TextView style -->
    <style name="HeadlineTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/amaranth</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- Headline TextView style for night theme -->
    <style name="HeadlineTextViewStyle.Night">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/amaranth</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>